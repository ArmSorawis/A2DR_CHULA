<launch>
    <!-- Arguments -->
    <arg name="slam_methods" default="offline_cartographer" doc="slam type [gmapping, online_cartographer, offline_cartographer]"/>

    <!-- SLAM: Gmapping, Cartographer, Hector -->
    <include file="$(find a2dr_slam)/launch/$(arg slam_methods).launch"/>

    <!-- rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true" args="-d $(find a2dr_slam)/rviz_config/a2dr_$(arg slam_methods).rviz"/>
</launch>
